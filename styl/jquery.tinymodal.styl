// Vars
//-----------------------------------------

@import "../node_modules/nib"

modal-width = 800px
max-content-height = 300px
modal-padding = 25px

title-color = #1D2A4D
button-color = #198A48
content-color = white

radius = 3px

// Tiny Modal
//-----------------------------------------

*
  box-sizing: border-box

.tinymodal-overlay
  position: fixed
  width: 100%
  height: 100%
  top: 0
  left: 0
  background: rgba(black, .5)

.tinymodal-window
  position: absolute
  width: modal-width
  top: 10%
  left: 50%
  box-shadow: 0 0 6px rgba(black, .3), 0 6px 30px rgba(black, .25)

.tinymodal-title
  position: relative
  padding: (modal-padding/1.5) modal-padding
  font-size: 130%
  font-weight: bold
  text-shadow: 0 1px rgba(black, .7)
  color: #fbfbfb
  background: title-color
  border-radius: top radius

.tinymodal-close
  position: absolute
  top: 50%
  right: .5em
  margin-top: -.5em
  font-size: 150%
  line-height: 1
  cursor: pointer

.tinymodal-content
  padding: modal-padding
  background: content-color

.tinymodal-content
  max-height: max-content-height
  overflow-y: auto

.tinymodal-buttons
  clearfix()
  padding: modal-padding
  background: linear-gradient(darken(content-color, 15%), content-color)
  border-radius: bottom radius

  .inner
    float: right

  button
    margin-left: .5em
    padding: .6em 1.25em
    line-height: 1
    color: #fbfbfb
    font-weight: bold
    text-shadow: 0 1px rgba(black, .7)
    background: button-color
    border: 0
    border: 1px solid darken(button-color, 10%)
    border-bottom: 1px solid darken(button-color, 40%)
    border-radius: radius
    box-shadow: inset 0 1px rgba(white, .45)
